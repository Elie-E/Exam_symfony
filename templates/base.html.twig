<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('style/bootstrap.css') }}">
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        {% block body %}
        {% if app.user %}
        <a href="{{ path('app_logout') }}"><button class="btn btn-secondary">logout</button></a>
        {% else %}
        <a href="{{ path('app_login') }}"><button class="btn btn-primary">login</button></a>
        {% endif %}
        {% endblock %}
    </body>
</html>
