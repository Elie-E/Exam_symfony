{% extends 'base.html.twig' %}

{% block title %}Employee{% endblock %}

{% block body %}
    <h1>Employee</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>EmployeePhoto</th>
                <td><img src="{{ asset('image/amployee/' ~ employee.employeePhoto)}}" style="height:250px;"></td>
            </tr>
            <tr>
                <th>EmployeeName</th>
                <td>{{ employee.employeeName }}</td>
            </tr>
            <tr>
                <th>EmployeeFirstName</th>
                <td>{{ employee.employeeFirstName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ employee.email }}</td>
            </tr>
            <tr>
                <th>Sector</th>
                <td>{{ employee.sector }}</td>
            </tr>
            <tr>
                <th>Contract</th>
                <td>{{ employee.Contract }}</td>
            </tr>
            <tr>
                <th>EndContract</th>
                <td>{{ employee.endContract ? employee.endContract|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('employee_index') }}">back to list</a>

     {% if is_granted('ROLE_RH') %}    
                    
    <a href="{{ path('employee_edit', {'id': employee.id}) }}">edit</a>

    {{ include('employee/_delete_form.html.twig') }}
    {% endif %}

{% endblock %}
